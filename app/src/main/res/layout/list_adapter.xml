<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    >

    <android.support.v7.widget.CardView
        android:background="@drawable/card_background"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:cardElevation="15dp"
        android:stateListAnimator="@anim/scale"
        android:clickable="false"
        app:cardMaxElevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/listview_image"
                android:layout_width="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"
                android:layout_height="230dp"
                />

            <TextView
                android:id="@+id/Title_Text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listview_image"
                android:layout_alignStart="@+id/listview_image"
                android:layout_alignEnd="@+id/listview_image"
                android:fontFamily="sans-serif-medium"
                android:text="asdfasdasdf"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/Date_Text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Title_Text"
                android:layout_alignStart="@+id/Title_Text"
                android:fontFamily="sans-serif-thin"
                android:text="asdfasdasdf"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/View_Count"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Title_Text"
                android:fontFamily="sans-serif-thin"
                android:text="124124 views"
                android:layout_alignRight="@id/Title_Text"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="13dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>